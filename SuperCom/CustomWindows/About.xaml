<super:BaseDialog
    x:Class="SuperCom.CustomWindows.About"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SuperCom.CustomWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:super="https://github.com/SuperStudio/SuperControls"
    Title="关于 SuperCom"
    Width="600"
    Height="300"
    MinHeight="0"
    Background="{DynamicResource Window.InnerDialog.Background}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="5*" />


        </Grid.ColumnDefinitions>

        <StackPanel
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <Image
                Height="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="/Resources/Ico/Icon_128.png" />


            <TextBlock
                Margin="10"
                HorizontalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="Gold"
                Style="{StaticResource BaseTextBlock}"
                Text="SuperCom" />

            <TextBox
                Margin="40,10"
                HorizontalAlignment="Center"
                FontSize="20"
                Foreground="{DynamicResource Window.Foreground}"
                Style="{StaticResource ReadOnlyTextBox}"
                Text="超级串口工具" />
        </StackPanel>

        <Rectangle
            Grid.Column="1"
            Width="1"
            Margin="0,40"
            Fill="{DynamicResource Window.Sub.Foreground}" />
        <StackPanel
            Grid.Column="2"
            Margin="20"
            VerticalAlignment="Center"
            Orientation="Vertical">


            <TextBox
                x:Name="VersionTextBlock"
                Margin="0,10"
                HorizontalAlignment="Left"
                FontSize="14"
                Foreground="{DynamicResource Window.Foreground}"
                Style="{StaticResource ReadOnlyTextBox}"
                Text="版本：2.3" />
            <TextBox
                Margin="0,10"
                HorizontalAlignment="Left"
                FontSize="11"
                Foreground="{DynamicResource Window.Sub.Foreground}"
                Style="{StaticResource ReadOnlyTextBox}"
                Text="发行日期：2022-12-15" />

            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <StackPanel Margin="0" Orientation="Horizontal">
                    <Image Width="25" Source="/Resources/Ico/github.png" />
                    <TextBlock
                        Margin="5,10"
                        FontSize="20"
                        Foreground="{DynamicResource Window.Foreground}"
                        TextAlignment="Center"><Hyperlink Click="OpenUrl" NavigateUri="https://github.com/SuperStudio/SuperCom">
                            <Run Text="Github" />
                        </Hyperlink></TextBlock>


                </StackPanel>



                <StackPanel
                    Margin="20,0"
                    Orientation="Horizontal"
                    Visibility="Collapsed">
                    <Image Width="25" Source="/Resources/Jvedio.ico" />
                    <TextBlock
                        Margin="5,10"
                        FontSize="20"
                        Foreground="{DynamicResource Window.Foreground}"
                        TextAlignment="Center"><Hyperlink Click="OpenUrl" NavigateUri="https://hitchao.github.io/JvedioWebPage/">
                            <Run Text="官网" />
                        </Hyperlink></TextBlock>
                </StackPanel>

            </StackPanel>
            <TextBlock
                Margin="0,20"
                HorizontalAlignment="Left"
                FontSize="15"
                FontWeight="Bold"
                Foreground="{DynamicResource Window.Foreground}"
                Text="By SuperStudio" />
        </StackPanel>
    </Grid>
</super:BaseDialog>
