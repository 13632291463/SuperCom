<super:BaseWindow
    x:Class="SuperCom.Window_Setting"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:config="clr-namespace:SuperCom.Config;assembly=SuperCom"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:localConverter="clr-namespace:SuperCom.Converters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:super="https://github.com/SuperStudio/SuperControls"
    Title="设置"
    Width="1000"
    Height="600"
    Background="{DynamicResource Window.Background}"
    Closing="BaseWindow_Closing"
    ContentRendered="BaseWindow_ContentRendered"
    Foreground="{DynamicResource Window.Foreground}"
    Icon="/Resources/Pictures/setting.png"
    Loaded="BaseWindow_Loaded"
    TitleAlign="Left"
    TitleMargin="0"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <super:BaseWindow.Resources>
        <localConverter:ColorToBrushConverter x:Key="ColorToBrushConverter" />
        <localConverter:RuleTypeEnumConverter x:Key="RuleTypeEnumConverter" />
    </super:BaseWindow.Resources>
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Margin="10"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            Panel.ZIndex="10"
            Click="ShowHelp"
            Content="{DynamicResource Help}"
            Style="{StaticResource ButtonPrimary}" />

        <TabControl
            Margin="10"
            Background="Transparent"
            FontSize="15"
            SelectedIndex="{Binding TabSelectedIndex, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Style="{StaticResource FlatTabControl}">
            <TabItem Header="基本设置" Style="{StaticResource FlatTabItem}">
                <StackPanel Margin="0,10" Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>



                        <TextBlock Style="{StaticResource SettingTitleStyle}" Text="基本" />
                        <StackPanel
                            Grid.Column="1"
                            Margin="5"
                            Orientation="Vertical">
                            <CheckBox Content="{DynamicResource CloseToBar}" IsChecked="{Binding CloseToBar, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="{DynamicResource FixAfterSendCommand}" IsChecked="{Binding FixedOnSendCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            <CheckBox Content="自动固定滚屏" IsChecked="{Binding FixedWhenFocus, Source={x:Static config:ConfigManager.Settings}}" />
                            <CheckBox Content="固定滚屏时弹出提示" IsChecked="{Binding HintWhenPin, Source={x:Static config:ConfigManager.Settings}}" />
                            <StackPanel Orientation="Horizontal">
                                <CheckBox Content="日志分片" IsChecked="{Binding EnabledLogFrag, Source={x:Static config:ConfigManager.Settings}}" />
                                <super:Slider
                                    Name="logFragSlider"
                                    Width="300"
                                    Margin="20,0"
                                    LargeChange="5"
                                    Maximum="150"
                                    Minimum="1"
                                    SmallChange="1"
                                    Visibility="{Binding ElementName=logFragCheckBox, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}"
                                    Value="{Binding LogFragSize, Source={x:Static config:ConfigManager.Settings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock
                                    Style="{StaticResource BaseTextBlock}"
                                    Text="{Binding ElementName=logFragSlider, Path=Value, StringFormat={}{0}\ MB}"
                                    Visibility="{Binding ElementName=logFragCheckBox, Path=IsChecked, Converter={StaticResource BoolToVisibilityConverter}}" />

                            </StackPanel>
                            <StackPanel Orientation="Horizontal">

                                <TextBlock Style="{StaticResource BaseTextBlock}" Text="内存上限" />
                                <Border
                                    Width="25"
                                    Height="25"
                                    Margin="0"
                                    Padding="0"
                                    VerticalAlignment="Stretch"
                                    Background="Transparent"
                                    ToolTip="超过上限后，文本框中的内容自动清空（硬盘日志保留）">
                                    <Viewbox Width="auto" Height="14">
                                        <Path
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Data="M512 128c212 0 384 172 384 384s-172 384-384 384-384-172-384-384 172-384 384-384m0-64C264.8 64 64 264.8 64 512s200.8 448 448 448 448-200.8 448-448S759.2 64 512 64z m32 192h-64v64h64v-64z m0 448V384h-32.8L384 418.4l16.8 61.6 79.2-21.6V704H384v64h256v-64H544z"
                                            Fill="{DynamicResource Window.Foreground}" />
                                    </Viewbox>
                                </Border>
                                <super:Slider
                                    Width="300"
                                    Margin="13,0"
                                    LargeChange="100"
                                    Maximum="2048"
                                    Minimum="256"
                                    SmallChange="10"
                                    Value="{Binding MemoryLimit, Source={x:Static config:ConfigManager.Settings}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <TextBlock Style="{StaticResource BaseTextBlock}" Text="{Binding MemoryLimit, Source={x:Static config:ConfigManager.Settings}, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0}\ MB}" />

                            </StackPanel>

                        </StackPanel>
                    </Grid>

                    <!--<CheckBox
                        Margin="10,5"
                        HorizontalAlignment="Left"
                        Content="{DynamicResource FixOnSearching}"
                        IsChecked="{Binding FixedOnSearch, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource NormalCheckBox}" />-->
                    <!--<CheckBox
                        Margin="10,5"
                        HorizontalAlignment="Left"
                        Content="{DynamicResource ScrollOnNotSearching}"
                        IsChecked="{Binding ScrollOnSearchClosed, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        Style="{StaticResource NormalCheckBox}" />-->


                    <CheckBox
                        Margin="10"
                        Content="{DynamicResource CloseToBar}"
                        Style="{StaticResource NormalCheckBox}"
                        Visibility="Collapsed" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Margin="20,15,40,10"
                            Style="{StaticResource SettingTitleStyle}"
                            Text="{DynamicResource Language}" />
                        <ComboBox
                            Name="langComboBox"
                            Grid.Column="1"
                            Height="30"
                            MinWidth="200"
                            Margin="5"
                            HorizontalAlignment="Left"
                            Style="{StaticResource BorderComboBox}">
                            <ComboBoxItem Content="中文" Tag="zh-CN" />
                            <ComboBoxItem Content="English" Tag="en-US" />
                            <ComboBoxItem Content="日本語" Tag="ja-JP" />
                        </ComboBox>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource SettingTitleStyle}" Text="备份" />
                        <StackPanel
                            Grid.Column="5"
                            Margin="5"
                            Orientation="Vertical">
                            <CheckBox Content="{DynamicResource AutoBackLibrary}" IsChecked="{Binding AutoBackup, Mode=TwoWay}" />
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Style="{StaticResource BaseTextBlock}" Text="{DynamicResource BackUpPeriodDay}" />
                                <ComboBox
                                    Grid.Column="1"
                                    Height="30"
                                    MinWidth="200"
                                    Margin="5"
                                    HorizontalAlignment="Stretch"
                                    SelectedIndex="{Binding AutoBackupPeriodIndex}"
                                    Style="{StaticResource BorderComboBox}">
                                    <ComboBoxItem Content="1" />
                                    <ComboBoxItem Content="3" />
                                    <ComboBoxItem Content="7" />
                                    <ComboBoxItem Content="15" />
                                    <ComboBoxItem Content="30" />
                                </ComboBox>
                                <Button
                                    Margin="10,0"
                                    BorderBrush="{DynamicResource Button.Selected.BorderBrush}"
                                    Click="OpenBackUpFolder"
                                    Content="打开文件夹"
                                    Style="{StaticResource BorderButton}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource SettingTitleStyle}" Text="系统" />
                        <StackPanel
                            Grid.Column="5"
                            Margin="5"
                            Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">


                                <CheckBox Content="防止系统休眠" IsChecked="{Binding AvoidScreenClose, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                            </StackPanel>
                        </StackPanel>
                    </Grid>

                </StackPanel>
            </TabItem>
            <TabItem Header="串口设置" Style="{StaticResource FlatTabItem}">
                <StackPanel Margin="0,10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource SettingTitleStyle}" Text="波特率" />
                        <StackPanel
                            Grid.Column="1"
                            Margin="5"
                            Orientation="Vertical">
                            <Border
                                Margin="5"
                                HorizontalAlignment="Left"
                                MouseLeftButtonUp="AddNewBaudRate"
                                Style="{StaticResource RoundHoverBorder}"
                                ToolTip="新增">
                                <Viewbox Width="auto" Height="13">
                                    <Path
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M925.696 384q19.456 0 37.376 7.68t30.72 20.48 20.48 30.72 7.68 37.376q0 20.48-7.68 37.888t-20.48 30.208-30.72 20.48-37.376 7.68l-287.744 0 0 287.744q0 20.48-7.68 37.888t-20.48 30.208-30.72 20.48-37.376 7.68q-20.48 0-37.888-7.68t-30.208-20.48-20.48-30.208-7.68-37.888l0-287.744-287.744 0q-20.48 0-37.888-7.68t-30.208-20.48-20.48-30.208-7.68-37.888q0-19.456 7.68-37.376t20.48-30.72 30.208-20.48 37.888-7.68l287.744 0 0-287.744q0-19.456 7.68-37.376t20.48-30.72 30.208-20.48 37.888-7.68q39.936 0 68.096 28.16t28.16 68.096l0 287.744 287.744 0z"
                                        Fill="{DynamicResource Window.Foreground}" />
                                </Viewbox>
                            </Border>
                            <ListBox
                                Grid.Row="1"
                                MinWidth="200"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                HorizontalContentAlignment="Stretch"
                                d:ItemsSource="{d:SampleData ItemCount=5}"
                                Background="{DynamicResource Window.Side.Background}"
                                ItemContainerStyle="{StaticResource NormalListBoxItem}"
                                ItemsSource="{Binding BaudRates}"
                                Style="{StaticResource NormalListBox}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Background="Transparent">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="auto" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock
                                                Grid.Column="0"
                                                Padding="5,0,0,0"
                                                HorizontalAlignment="Left"
                                                Background="Transparent"
                                                Style="{StaticResource BaseTextBlock}"
                                                Text="{Binding .}" />
                                            <Border
                                                Grid.Column="1"
                                                Background="Transparent"
                                                BorderBrush="{StaticResource TabItem.Selected.Background}">
                                                <Button
                                                    Width="20"
                                                    Height="20"
                                                    Margin="5"
                                                    HorizontalAlignment="Right"
                                                    super:CommonExt.HoverBackground="{DynamicResource TabItem.Hover.Background}"
                                                    Click="DeleteBaudRate"
                                                    Style="{StaticResource RoundNormalButton}"
                                                    Tag="{Binding .}"
                                                    Visibility="Visible">
                                                    <Viewbox
                                                        Width="10"
                                                        Height="auto"
                                                        VerticalAlignment="Center">
                                                        <Path
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Data="M610.218667 505.6l398.08-387.413333a49.664 49.664 0 0 0 0-71.338667l-2.133334-2.133333a52.992 52.992 0 0 0-73.301333 0L534.784 432.64 136.704 44.373333a52.992 52.992 0 0 0-73.386667 0L61.269333 46.592a48.810667 48.810667 0 0 0 0 71.338667l398.165334 387.669333-398.165334 387.498667a49.664 49.664 0 0 0 0 71.253333l2.218667 2.133333c20.48 19.626667 52.821333 19.626667 73.301333 0l398.08-387.413333 398.08 387.413333c20.48 19.626667 52.906667 19.626667 73.386667 0l2.048-2.133333a49.664 49.664 0 0 0 0-71.253333l-398.08-387.413334z"
                                                            Fill="{DynamicResource TabItem.Hover.Foreground}" />
                                                    </Viewbox>
                                                </Button>
                                            </Border>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>


                        </StackPanel>
                    </Grid>


                </StackPanel>
            </TabItem>

            <TabItem Header="日志" Style="{StaticResource FlatTabItem}">

                <StackPanel Margin="0,10" Orientation="Vertical">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource SettingTitleStyle}" Text="存储" />
                        <StackPanel
                            Grid.Column="1"
                            Margin="5"
                            Orientation="Vertical">
                            <CheckBox Content="自动保存日志" IsChecked="{Binding WriteLogToFile, Source={x:Static config:ConfigManager.CommonSettings}}" />
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Left"
                                FontWeight="Bold"
                                Style="{StaticResource BaseTextBlock}"
                                Text="保存目录（绝对路径）" />
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>
                                <super:SearchBox
                                    Name="saveDirBox"
                                    Margin="0,10"
                                    Background="{DynamicResource Window.Side.Background}"
                                    Text="{Binding LogSaveDir, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                                <Button
                                    Grid.Column="1"
                                    Margin="10"
                                    BorderBrush="{DynamicResource Button.Selected.BorderBrush}"
                                    Click="SelectLogSaveDir"
                                    Content="选择文件夹"
                                    Style="{StaticResource BorderButton}" />
                            </Grid>

                        </StackPanel>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Style="{StaticResource SettingTitleStyle}" Text="格式" />
                        <StackPanel
                            Grid.Column="1"
                            Margin="5"
                            Orientation="Vertical">
                            <TextBlock
                                Margin="5"
                                HorizontalAlignment="Left"
                                FontWeight="Bold"
                                Style="{StaticResource BaseTextBlock}"
                                Text="文件名" />

                            <super:SearchBox
                                Name="searchBox"
                                Margin="0,10"
                                Background="{DynamicResource Window.Side.Background}"
                                PreviewTextInput="searchBox_PreviewTextInput"
                                Text="{Binding LogNameFormat, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                            <Border
                                Margin="5"
                                Background="{DynamicResource Window.Title.Background}"
                                BorderBrush="{DynamicResource Button.Selected.BorderBrush}"
                                BorderThickness="4,0,0,0"
                                CornerRadius="5">
                                <StackPanel Orientation="Vertical">
                                    <TextBlock
                                        Margin="10"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource BaseTextBlock}"
                                        Text="%C 串口名" />
                                    <TextBlock
                                        Margin="10"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource BaseTextBlock}"
                                        Text="%R 备注名" />
                                    <TextBlock
                                        Margin="10"
                                        HorizontalAlignment="Left"
                                        Style="{StaticResource BaseTextBlock}"
                                        Text="%Y 年 %M 月 %D 日 %h 时 %m 分 %s 秒 %f 毫秒" />
                                </StackPanel>

                            </Border>


                        </StackPanel>
                    </Grid>


                </StackPanel>


            </TabItem>
            <TabItem Header="语法高亮" Style="{StaticResource FlatTabItem}">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <Button
                            Margin="5"
                            HorizontalAlignment="Left"
                            BorderBrush="{DynamicResource Button.Selected.BorderBrush}"
                            Click="NewRule"
                            Content="新增语法高亮"
                            Style="{StaticResource BorderButton}" />
                        <Border
                            Width="25"
                            Height="25"
                            Margin="5,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Panel.ZIndex="20"
                            CornerRadius="5"
                            PreviewMouseLeftButtonUp="ShowHighLightHelp"
                            Style="{StaticResource RoundBorder}"
                            Tag="{DynamicResource Window.Title.Hover.Background}">
                            <Viewbox
                                Width="20"
                                Height="auto"
                                VerticalAlignment="Center">
                                <Path
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Data="M563.363941 572.337203c-0.662107-10.635221 5.985569-21.937638 19.948145-33.908274 13.962576-11.964496 29.591164-25.264407 46.879625-39.893592 17.288461-14.628162 33.242474-31.083949 47.872273-49.365314 14.630823-18.286482 22.606806-39.397289 23.936137-63.332421 1.330354-25.932626-1.329331-50.199309-7.977007-72.810283-6.647676-22.604834-17.620026-42.050722-32.910909-58.33971-15.297023-16.290011-35.079386-29.258371-59.347087-38.900985-24.267702-9.636474-52.694294-14.45727-85.274661-14.45727-40.563514 0-74.308452 7.148817-101.239931 21.441335-26.925339 14.293541-48.705279 31.581276-65.326516 51.864228-16.621237 20.276812-28.26081 41.222867-34.908486 62.829977-6.647676 21.60711-9.641996 39.727817-8.974772 54.358025 0.662107 17.282618 6.150328 29.92045 16.455454 37.897122 10.305126 7.976672 21.442235 12.135388 33.413373 12.466939 11.964998 0.331551 22.937348-2.989077 32.910909-9.973142 9.973561-6.984065 14.960341-17.121959 14.960341-30.416753 0-7.982812 2.493902-17.790178 7.480682-29.424146s11.805356-22.771633 20.450609-33.411971c8.643207-10.635221 19.115139-19.615757 31.416819-26.924209 12.30168-7.315616 26.098473-10.971889 41.39038-10.971889 29.921706 0 53.857842 7.480368 71.81455 22.440082 17.950567 14.959713 26.263233 33.742499 24.934925 56.348356 0 11.302417-3.325885 21.772886-9.973561 31.4155-6.652793 9.642614-15.131241 18.948561-25.43739 27.929096-10.304103 8.974395-21.276452 17.949814-32.910909 26.924209-11.639573 8.974395-22.606806 18.286482-32.917049 27.929096-10.304103 9.636474-18.949356 20.111037-25.927574 31.4155-6.984358 11.302417-10.806567 23.603581-11.474814 36.898375l0.998789 37.903262c0 9.973142 4.656239 19.444864 13.962576 28.4254 9.311454 8.975419 21.613134 13.796214 36.906064 14.458293 15.29293-0.662079 27.427804-5.64865 36.403599-14.959713 8.974772-9.30697 13.134686-19.947308 12.467463-31.911804L563.365987 572.337203zM512.496324 817.685098c17.289484 0 31.753501-5.814426 43.387957-17.453511 11.639573-11.63396